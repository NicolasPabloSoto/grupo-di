<div class="slideshow-container">
    <div class="capaDegre"></div>
    <div  class="contDots">
        <span class="dot" onclick="currentSlide(1)"></span> <br>
        <span class="dot" onclick="currentSlide(2)"></span> <br>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>

    <div class="mySlides fade bgUno" id="uno"></div>

    <div class="mySlides fade bgDos" id="dos"></div>

    <div class="mySlides fade bgTres" id="tres"></div>
</div>



<style>
    * {
        box-sizing: border-box;
    }

    body {
    }

    .mySlides {
        display: none;
    }

    img {
        vertical-align: middle;
    }

    .contDots{
        text-align: center;
        position: absolute;
        top: 50%;
        right: 30px;
        z-index: 10;
        width: fit-content;
        height: fit-content;
    }

    /* Slideshow container */

    .slideshow-container {
        width: 100%;
        height: 800px;
        position: relative;
        margin: auto;
        overflow: hidden;
        display: grid;
        grid-template-columns: 1fr;
        place-items: center center;
        -background-color: rgb(38, 38, 38);
        background-color:rgb(14, 13, 24);
    }

    .dot {
        height: 18px;
        width: 18px;
        margin: 0.1em 0;
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        display: inline-block;
        cursor: pointer !important;
        box-shadow: 0 0px 10px rgba(var(--black), 80%);
        transition: background-color 0.6s ease;
    }

    .active {
        background-color: white;
    }

    /* animacion tiempo */
    .fade {
        animation-name: fade;
        animation-duration: 2s;
    }

    @keyframes fade {
        from {
            opacity: 0.2;
        }
        to {
            opacity: 1;
        }
    }

    /* responsive */
    @media only screen and (max-width: 300px) {
        .text {
            font-size: 11px;
        }
    }

    .bgUno {
        width: 100%;
        height: 800px;
        background: url(../../src/images/business-executives-using-laptop.jpg);
        background-position: center center;
        background-size: cover;
        background-repeat: no-repeat;
    }

    .bgDos {
        width: 100%;
        height: 800px;
        background: url(../../src/images/business-people-meeting-medium-shot.jpg);
        background-position: center center;
        background-size: cover;
        background-repeat: no-repeat;
    }

    .bgTres {
        width: 100%;
        height: 800px;
        background: url(../../src/images/medium-shot-smiley-people-work.jpg);
        background-position: center center;
        background-size: cover;
        background-repeat: no-repeat;
    }
 
    .capaDegre{
        position: absolute;
        bottom: 0;
        width: 800%;
        height: 150px;
        z-index: 10;
        background: rgb(255,255,255);
        background: linear-gradient(0deg, #f5f5f7 0%, #f5f5f7 20%,#f5f5f700 100%);
    }

    @media (min-width: 768px) and (max-width: 1024px) {
        .slideshow-container {
        height: 750px;
        }
    }

    @media (min-width: 320px) and (max-width: 767px) {
        .contDots{
        text-align: center;
        position: absolute;
        top: 20%;
        right: 20px;
        z-index: 10;
        width: fit-content;
        height: fit-content;
    }
    }


</style>

<script>
    
    (window as any).currentSlide = function (n: number): void {
        showSlides((slideIndex = n));
    };

    // slider eventual
    let slideIndex: number = 0;
    let autoSlideInterval: ReturnType<typeof setTimeout>;

    function showSlides(n: number): void {
        clearInterval(autoSlideInterval);
        const slides = document.getElementsByClassName(
            "mySlides",
        ) as HTMLCollectionOf<HTMLElement>;
        const dots = document.getElementsByClassName(
            "dot",
        ) as HTMLCollectionOf<HTMLElement>;

        if (n > slides.length) {
            slideIndex = 1;
        }
        if (n < 1) {
            slideIndex = slides.length;
        }
        for (let i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (let i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";

        autoSlideInterval = setTimeout(autoSlides, 5000);
    }

    function autoSlides(): void {
        const slides = document.getElementsByClassName(
            "mySlides",
        ) as HTMLCollectionOf<HTMLElement>;
        const dots = document.getElementsByClassName(
            "dot",
        ) as HTMLCollectionOf<HTMLElement>;
        for (let i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        slideIndex++;
        if (slideIndex > slides.length) {
            slideIndex = 1;
        }
        slides[slideIndex - 1].style.display = "block";
        for (let i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        dots[slideIndex - 1].className += " active";
        autoSlideInterval = setTimeout(autoSlides, 3000);
    }

    autoSlides(); // Iniciar la transición automática

</script>
