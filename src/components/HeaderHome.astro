---
import HeaderLink from "./HeaderLink.astro";
import FormularioActividad from "../components/FormularioActividades.astro";

---

<header id="navegador" class="navStyle">


	<div class="formShow" id="formAct">
		<div class="formAct" >
			<div class="formActEsp">
				<div class="cabeceraFormAct">

					<div class="iconCloseForm" id="closeForm">
						<i class="bi bi-x-circle circleClose"></i>
					</div>

					<p class="etiquetaFormAct">
						<i class="bi bi-opencollective iconFoo"></i> Alumnos DI
					</p>

					<p class="tituloFormAct">
						Formulario de Inscripción para Actividades
					</p>
				</div>
				<div class="formActContainer">
					<FormularioActividad />
				</div>
			</div>
		</div>
	</div>

	<nav>
		<input type="checkbox" id="check">

        <label for="check" class="checkbtn">
			<i class="fas fa-bars">
				<svg
					class="w-[40px] h-[40px] text-gray-800 dark:text-white"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					width="24"
					height="24"
					fill="none"
					viewBox="0 0 24 24"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-width="2.2"
						d="M5 7h14M5 12h14M5 17h14"></path>
				</svg>
			</i>
		</label>

		<a href="/" class="logoHome">
			<div class="logotipoMenu"></div>
		</a>

		<ul class="menuCont">
			<li><HeaderLink class="linkMenu" href="/">Home</HeaderLink></li>

			<div class="dropdown">
				<button class="dropbtn">Programas &#x25BE; </button>
				<div class="dropdown-content">
					<li> 
						<HeaderLink class="linkSubMenu" href="/alaya"
							>Alaya</HeaderLink>
					</li>
					<li>
						<HeaderLink class="linkSubMenu" href="/Pitagoras"
							>Pitágoras</HeaderLink>
					</li>
					<!-- <li>
						<HeaderLink class="linkSubMenu" href="/gestion"
							>Gestión</HeaderLink>
					</li> -->
					
				</div>
			</div>

			<li><HeaderLink class="linkMenu" href="/blog">Blog</HeaderLink></li>
			<li>
				<HeaderLink class="linkMenu" href="/equipo">Equipo</HeaderLink>
			</li>
		</ul>

		<div class="social-links">
			
			<div class="btnActividades" id="formShow">Actividades</div> 

			<a class="btnCampus" href="https://campus.grupodi.cl/" target="_blank">
				<i class="bi bi-opencollective iconFoo"></i>
				&nbsp;Campus DI				  
			</a> 
			<a class="btnContacto" href="/#formulario">Contáctanos</a> 
		</div>

	</nav>
</header>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		// Obtenemos los elementos del DOM
		const formElement = document.getElementById("formAct");
		const showButton = document.getElementById("formShow");
		const closeButton = document.getElementById("closeForm");

		// Verificamos que todos los elementos existan
		if (!formElement || !showButton || !closeButton) {
			console.error("No se encontraron todos los elementos necesarios");
			return;
		}

		// Aseguramos que los elementos son del tipo correcto
		if (formElement instanceof HTMLElement && 
			showButton instanceof HTMLElement && 
			closeButton instanceof HTMLElement) {

			// Establecemos el estado inicial del formulario
			formElement.style.display = "none";

			// Función para mostrar el formulario
			const showForm = () => {
				formElement.style.display = "block"; // o "flex" dependiendo de tu CSS
			};

			// Función para ocultar el formulario
			const hideForm = () => {
				formElement.style.display = "none";
			};

			// Agregamos los event listeners
			showButton.addEventListener("click", showForm);
			closeButton.addEventListener("click", hideForm);
		}
	});

</script>


<style>

.formShow{
		position: absolute;
		z-index: 100;
		right: 2%;
		top: 80px;
		width: 350px;
		height: 600px;
		display: none;
		transition: all ease-in-out 0.6s;
	}

	.formAct {
		height: 600px;
		display: flex;
		border-radius: 12px;
		justify-content: center;
		align-items: center;
		box-shadow:
			rgba(0, 0, 0, 0.1) 0px 20px 25px -5px,
			rgba(0, 0, 0, 0.04) 0px 10px 10px -5px;
		background-color: rgba(255, 255, 255, 1);
	}

	.formActEsp {
		width: 90%;
		height: 94%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		/* background-color: rgba(255, 0, 0, 0.15); */
	}

	.cabeceraFormAct {
		width: 100%;
		height: fit-content;
		position: relative;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: start;
		margin-bottom: 10px;
		border-bottom: solid 1px rgba(0, 0, 0, 0.1);
	}

	.formActContainer {
		width: 100%;
		height: 100%;
		overflow-y: scroll;
		border-radius: 12px;
		/* border: solid 1px rgba(0, 0, 0, 0.1); */
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: rgba(107, 109, 112, 0.05);
	}

	.iconCloseForm {
		width: 40px;
		height: 40px;
		position: absolute;
		right: 0;
		top: 0;
		cursor: pointer;
		display: flex;
		justify-content: center;
		align-items: center;
		-background-color: #007bff;
	}

	.circleClose {
		color: rgb(126, 121, 121);
		font-size: 1.8em;
	}

	.iconCloseForm:hover .circleClose {
		color: rgb(181, 77, 77);
		font-size: 1.8em;
	}

	.etiquetaFormAct {
		font-size: 0.8em;
		font-weight: 500;
		padding: 2px 15px;
		border-radius: 2em;
		color: white;
		margin: 0;
		background-color: var(--color-base);
	}

	.tituloFormAct {
		width: 100%;
		text-align: left;
		font-size: 1.5em;
		font-weight: 600;
		line-height: 1em;
		color: rgb(113, 108, 108);
	}

	.formActContainer::-webkit-scrollbar {
		width: 10px;
	}

	/* Track */
	.formActContainer::-webkit-scrollbar-track {
		border-radius: 10px;
	}

	/* Handle */
	.formActContainer::-webkit-scrollbar-thumb {
		background: rgb(215, 210, 210);
		border-radius: 10px;
	}

	/* Handle on hover */
	.formActContainer::-webkit-scrollbar-thumb:hover {
		background: var(--color-base);
	}

	.hidden {
		display: none;
	}

	
	.navStyle {
		width: 100%;
		height: 75px;
		box-shadow: 0 2px 8px rgba(var(--black), 40%);
		z-index: 50;
		position: sticky;
		top: 0;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.navStyleBg{
		width: 100%;
		height: 75px;
		box-shadow: 0 2px 8px rgba(var(--black), 40%);
		z-index: 50;
		position: sticky;
		top: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		background: linear-gradient(90deg, rgba(116,26,128,0.9) 0%, rgba(62,47,138,0.9) 100%);
	}

	.logotipoMenu{
		width: 130px;
		height: 62px;
		background: url("/grupo-di-logo.svg");
		background-size: contain;	
		background-repeat: no-repeat;
		background-position: center;
		-background-color: red;
	}


	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	.logoHome {
		height: fit-content;
		text-decoration: none;
		padding: 0 0;
		border-bottom: none;
	}

	nav {
		height: 100%;
		width: 94%;
		max-width: 1440px;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.menuCont {
		display: flex;
		align-items: center;
		justify-content: space-between;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	nav .linkMenu {
		padding: 1em 0.5em;
		color: rgba(255, 255, 255, 0.8);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav .linkMenu:hover {
		color: rgba(255, 255, 255, 1);
	}

	nav .linkMenu.active {
		text-decoration: none;
		border-bottom-color: yellow;
		color: white;
	}

	.social-links,
	.social-links a {
		display: flex;
	}

	.btnContacto {
		height: fit-content;
		padding: 0.1em calc(1em - 2px);
		border: 2px solid white;
		border-radius: 2em;
		background-color: rgba(255, 255, 255, 0);
		font-size: 0.8em;
		line-height: 1.7;
		color: white;
		cursor: pointer;
		text-decoration: none;
		line-height: 1.7em;
		transition: all ease-in-out 0.15s;
	}

	.btnContacto:hover {
		background-color: #4CAF50; 
		color: white;
		border: 2px solid transparent;
		box-shadow: 0 0px 10px rgba(var(--black), 50%);
	}
	
	.btnCampus {
		height: fit-content;
		padding: 0.2em 1em;
		border-radius: 2em;
		background-color: var(--color-base);
		font-size: 0.8em;
		line-height: 1.7;
		color: white;
		transition: all ease-in-out 0.15s;
		cursor: pointer;
		text-decoration: none;
		margin-right: 10px;
		line-height: 1.7em;
	}

	.btnCampus:hover {
		background-color: #ff9800;
		color: white;
		border: 1px solid transparent;
		box-shadow: 0 0px 10px rgba(var(--black), 50%);
	}

	.btnActividades {
		height: fit-content;
		padding: 0.1em calc(1em - 2px);
		border: 2px solid white;
		border-radius: 2em;
		background-color: rgba(255, 255, 255, 0);
		font-size: 0.8em;
		line-height: 1.7;
		color: white;
		cursor: pointer;
		text-decoration: none;
		line-height: 1.7em;
		margin-right: 1em;
		transition: all ease-in-out 0.15s;
	}

	.btnContactoActividades:hover {
		background-color: #4CAF50; 
		color: white;
		border: 2px solid transparent;
		box-shadow: 0 0px 10px rgba(var(--black), 50%);
	}

	.checkbtn {
		font-size: 30px;
		color: white;
		cursor: pointer;
		display: none;
	}
	
	#check {
		display: none;
	}

	.dropdown {
		float: left;
		position: relative;
		display: inline-block;
		padding: 1em 0.5em;
		color: white;
		border-bottom: 4px solid transparent;
	}

	.dropbtn {
		background-color: transparent;
		color: rgba(255, 255, 255, 0.8);
		font-size: 20px;
		letter-spacing: 0.05em;
		border: none;
		cursor: pointer;
	}

	.dropdown:hover{
		border-bottom: 4px solid transparent;
		color: rgba(255, 255, 255, 1);
	}

	.dropdown:hover .dropdown-content {
		display: block;
	}

	.dropdown:hover .dropbtn {
		background-color: transparent;
		color: white;
		font-size: 18px;
		border: none;
		cursor: pointer;
	}

	.dropdown-content {
		display: none;
		position: absolute;
		left: 0;
		right: 0;
		top: 76px;
		-background-color: #f9f9f9;
		min-width: 140px;
		box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
		z-index: 1;
		background-color: rgba(113, 55, 143, 1);
	}

	.dropdown-content .linkSubMenu {
		color: white;
		/* padding: 12px 16px; */
		height: 100%;
		width: 100%;
		text-decoration: none;
		display: block;
		text-align: center;
		padding: 4px 0px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);
	}

	.dropdown-content .linkSubMenu.linkMenu.active{
		color: yellow;
	}

	.dropdown-content .linkSubMenu:hover {
		font-weight: bold;
	}

	

	@media (min-width: 768px) and (max-width: 1024px) {
		
		.formShow{
			position: absolute;
			z-index: 100;
			right: 10%;
			top: 80px;
			width: 350px;
			height: 600px;
			display: none;
			transition: all ease-in-out 0.6s;
		}

		header{
			padding: 0 1em;
		}

		nav .linkMenu{
			font-size: 0.75em;
			padding: 1.7em 0.5em;
		}

		li{

		}

		.dropbtn{
			font-size: 0.7em;
		}

		.dropdown:hover .dropbtn{
			font-size: 0.7em;
		}

		.dropdown-content{
			min-width: 100px;
		}

		.dropdown-content{
			font-size: 0.7em;
		}

		.btnContacto {
			padding: 0.2em 1em;
			font-size: 0.8em;
			line-height: 1.7;
		}

	}

	@media (max-width: 767px) {

		.formShow{
			position: absolute;
			z-index: 100;
			right: 0;
			left: 0;
			top: 90px;
			width: 90%;
			margin-left: 2.5%;
			height: 600px;
			display: none;
			transition: all ease-in-out 0.6s;
		}

		.social-links {
			display: none;
		}

		header {
			padding: 0.5em 1em;
			background: linear-gradient(90deg, rgba(116,26,128,0.9) 0%, rgba(62,47,138,0.9) 100%);
		}

		.menuCont {
			position: fixed;
			top: 93px;
			right: -100%;
			background: linear-gradient(180deg, rgba(67, 40, 114, 0.9) 0%, rgba(62,47,138,0.9) 60%, rgba(255, 255, 255, 0) 100%);
			width: 100%;
			height: 70%;
			display: flex;
			flex-direction: column;
			justify-content: start;
			align-items: start;
			transition: all 0.3s;
			padding-bottom: 50px;
		}

		li {
			-background-color: red;
			padding: 0px 0px;
			width: 100%;
			height: fit-content;
		}

		nav .linkMenu{
			font-size: 1.2em;
			padding: 10px 0;
			width: 100%;
			border-bottom: 1px solid rgba(255, 255, 255, 0.2);
			height: fit-content;
			text-align: center;
		}

		.checkbtn {
			display: block;
			order: 1;
			margin-right: 20px;
		}

		.dropdown {
			height: fit-content;
			width: 100%;
			position: relative;
			display: inline-block;
			-padding: 10px 0;
			-background-color: red;
			border-bottom: 1px solid rgba(255, 255, 255, 0.2);
			text-align: center;
		}

		.dropbtn {
			background-color: transparent;
			color: white;
			font-size: 1.2em;
			border: none;
			cursor: pointer;
		}

		.dropdown:hover .dropbtn{
			font-size: 1.2em;
		}

		.dropdown-content {
			display: none;
			position: relative;
			right: 0;
			top: 20px;
			min-width: 100%;
			box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
			z-index: 0;
			background-color: rgba(0, 0, 0, 0.8);
		}

		.dropdown-content .linkSubMenu {
			color: white;
			/* padding: 12px 16px; */
			height: 100%;
			width: 100%;
			text-decoration: none;
			display: block;
			text-align: center;
			padding: 4px 0px;
			font-size: 1.1em;
			border-bottom: 1px solid rgba(255, 255, 255, 0.2);
		}

		#check:checked ~ .menuCont {
			right: 0;
		}
	}
</style>


<script>
	// Definimos un tipo para el elemento que queremos modificar
	type ScrollElement = HTMLElement;

	// Función principal con tipos estrictos
	const handleScroll = (): void => {
		// Obtenemos el elemento de manera segura
		const element: ScrollElement | null = document.getElementById("navegador");
		
		// Verificamos que el elemento existe
		if (!element) {
			console.warn("Elemento con ID 'navegador' no encontrado");
			return;
		}

		// Obtenemos el scroll actual con seguridad de tipos
		const scrollTop: number = document.documentElement.scrollTop || 0;

		// Aplicamos la clase basada en la posición del scroll
		if (scrollTop > 50) {
			element.className = "navStyleBg";
		} else {
			element.className = "navStyle";
		}
	};

	// Asignamos el evento con tipo de evento correcto
	window.onscroll = handleScroll;

	// También podríamos usar addEventListener con manejo de tipos
	// window.addEventListener('scroll', handleScroll);
</script>
	