		gap: 1rem;
		-background-color: rgba(55, 55, 54, 0.5);
	}

	.mapaText{
		flex: calc(50% - 1rem);
		display: flex;
		flex-direction: column;
		justify-content: start;
		align-items: start;
	}

	.mapaGoogle{
		flex: calc(50% - 1rem);
		display: flex;
		justify-content: end;
		align-items: center;
	}

	.mapaSlogan{
		font-size: 1.6em;
		font-weight: 500;
		line-height: 1.1em;
		text-wrap: balance;
		color: rgb(98, 93, 93);
		margin-bottom: 40px;
	}

	.mapaDire{
		font-size: 0.9em;
		font-weight: 500;
		color: var(--color-base);
		/* color: rgb(68, 65, 65); */
	}

	.googleMap{
		height: 400px;
		width: 100%;
		border-radius: 1rem;
		max-width: 600px;
		box-shadow: var(--box-shadow-inicial);
	}

	/* animacion -------------------------------------------- */

	@keyframes appear {
        from {
          opacity: 0;
          transform: translateX(-100px);
        }
        to {
          opacity: 1;
          transform: translateX(-100px);
        }
      }

      .anima {
        animation: appear linear;
        animation-timeline: view();
        animation-range: entry 0% cover 40%;
      } 

