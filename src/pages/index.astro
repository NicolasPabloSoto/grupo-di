		position: relative;
		width: 96%;
		max-width: 1280px;
		display: flex;
		flex-direction: row;
		align-items: stretch;
		z-index: 10;
		margin-top: 70px;
		flex: 50%;
	}

	.bajadaHome {
		width: fit-content;
		margin: 0px;
		margin-bottom: 20px;
		margin-top: 20px;
		font-size: 0.7em;
		font-weight: 600;
		color: var(--color-base);
		background-color: rgba(0, 0, 0, 0.12);
		padding: 5px 15px 3px 15px;
		border-radius: 20px;
		margin-top: 50px;
	}

	.sloganHome {
		font-size: 2.5em;
		margin: 0px;
		margin-bottom: 20px;
		margin-top: 10px;
		line-height: 1em;
		letter-spacing: -0.02em;
		font-weight: 600;
		color: white;
		text-shadow: rgba(55, 55, 54, 0.5) 1px 0 10px;
	}

	.textHome {
		margin-bottom: 40px;
		width: 80%;
		font-size: medium;
		text-wrap: balance;
		color: white;
	}

	.botonesHome {
		width: 40%;
		display: flex;
		gap: 1em;
	}

	.botonEquipo {
		height: 40px;
		width: 100%;
		border: none;
		border-radius: 0.4em;
		background-color: var(--color-base);
		font-size: 1rem;
		font-weight: 600;
		color: white;
		box-shadow:
			rgba(65, 63, 63, 0.2) 0px 1px 2px 0px,
			rgba(107, 109, 112, 0.05) 0px 2px 6px 2px;
		transition: all ease-in-out 0.3s;
		cursor: pointer;
		display: flex;
		justify-content: center;
		align-items: center;
		transform: scale(1);
		text-decoration: none;
