---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Slider from "../components/Slider.astro";
import Estadisticas from "../components/estadisticas.astro";
import Programas from "../components/Programas.astro";
import Enlaceblog from "../components/Enlaceblog.astro";
import GrupoLogotipo from "../../public/GrupoLogotipo.astro";
import Formulario from "../components/Formulario.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---
 
<!doctype html> 
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />

		<main>
			<div class="sliderHome"> 
				<Slider />
			</div>

			<div class="contInfoHome">
				<div class="contInfoIzq">
					<GrupoLogotipo
						width={60}
						height={60}
						fill="white"
						class="iconoEmpresa"
					/>
					<p class="bajadaHome">CONSULTORIA Y CAPACITACIÓN</p>
					<h1 class="sloganHome">
						Capacitarse es Crecer, <br />
						te ayudamos hacia <br />
						nuevas fronteras. <br />
					</h1>
					<p class="textHome">
						Bienvenidos a Grupo DI, Potenciamos tu crecimiento con
						capacitación innovadora y metodologías adaptativas.
						¡Comencemos!
					</p>

					<div class="botonesHome">
						<a class="botonEquipo" href="/equipo.astro">Conócenos</a>
						<a class="botonCursos" href="#metodos">Cursos</a>
					</div>
				</div>
				<div class="contInfoDer" style=" flex: 50%;"></div>
			</div>

			<div class="datosNum">
				<Estadisticas />
			</div>

			<h3 class="titulosHome">&#8212; Explora lo que tus profesores comparten &#8212;</h3>

			<div class="blogEntradas">
				<Enlaceblog />
			</div>

			<div class="metodos" id="metodos">
				<Programas />
			</div>

			<div class="formulario" id="formulario">
				<Formulario />
			</div>
	
			<div class="mapa">
				<div class="mapaEsp">
					<div class="mapaText">
						<p class="mapaSlogan">Visítanos junto a tu empresa y vive una experiencia de aprendizaje a través de nuestros equipo de profesores en nuestro Campus</p>
						<p class="mapaDire">Estado 10, Oficina 1602, Santiago de Chile</p>
					</div>
					<div class="mapaGoogle">
						<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3329.234902271473!2d-70.64870854757903!3d-33.44318607960599!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9662c5cc6a1d8de1%3A0x41196cd1f2a5688d!2sEstado%2010!5e0!3m2!1ses-419!2scl!4v1726065327811!5m2!1ses-419!2scl" class="googleMap" width="" height="" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.contInfoHome {
		position: relative;
		width: 96%;
		max-width: 1280px;
		display: flex;
		flex-direction: row;
		align-items: stretch;
		z-index: 10;
		margin-top: 70px;
		flex: 50%;
	}

	.iconoEmpresa {
		filter: drop-shadow(2px 4px 6px rgba(0, 0, 0, 0.262));
	}

	.bajadaHome {
		width: fit-content;
		margin: 0px;
		margin-bottom: 20px;
		margin-top: 20px;
		font-size: 0.7em;
		color: white;
		padding: 5px 10px 3px 10px;
