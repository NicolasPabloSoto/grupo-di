    }

    .programaContEsp{
        width: 100%;
        max-width: 1024px;
        height: fit-content;
        padding-bottom: 20px;
        -background-color: rgba(0, 0, 0, 0.2);
    }

    .etiqueta{
        width: 100%;
        text-align: center;
        font-size: 1.1em;
        font-weight: 500;
        font-style: italic;
        /* padding: 3px 10px; */
