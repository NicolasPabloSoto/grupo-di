        text-align: left;
        color: rgb(97, 92, 92);
        vertical-align: sub;
        background-color: white;

    }

    .infoBoxText{
        width: 90%;
        font-size: 0.8em;
        font-weight: normal;
        line-height: 1.4em;
        letter-spacing: -0.01em;
        text-wrap: pretty;
        color: rgb(86, 83, 83);
        margin-top: 20px;
    }

    /* contenidos ----------------------------------------- */

    .contEntrada{
        width: 100%;
        height: fit-content;
        display: flex;
        justify-content: center;
        align-items: center;
