        width: fit-content;
        height: 35px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 0.5rem;
    }

    .regalos{
        font-size: 0.9em;
        font-weight: bold;
        letter-spacing: -0.01em;
        text-wrap: pretty;
        vertical-align: middle;
        color: rgb(86, 83, 83);
        padding-top: 5px;
    }

    .iconRegalos{
        height: 30px;
        color: var(--color-ayala);
    }
    

    .resumenImg{
        flex: calc(50% - 0.5rem);
    }

    .imagenEntrada{
        width: 100%;
        height: 369px;
        background: url(../images/business-people-meeting-medium-shot.jpg); 
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        border-radius: 12px;
    }

    .infoCont{
        width: 100%;
        height: fit-content;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: white;
    }

    .infoContEsp{
        width: 100%;
        max-width: 1024px;
        height: fit-content;
        padding-top: 40px;
        padding-bottom: 40px;
        -background-color: orange;
    }

    .infoIntro{
        width: 100%;
        height: fit-content;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 1rem;
        -background-color: blue;
    }

    .infoBox{
        max-width: calc(33.3% - 1rem);
        min-width: 300px;
        height: fit-content;
        display: flex;
        flex-direction: column;
        justify-content: start;
        align-items: center;
        -background-color: var(--color-bg-azul);
    }

    .infoImagen{
        width: 100%;
        height: 300px;
        border-radius: 12px;
        display: flex;
        justify-content: center;
        align-items: start;
    }

    .imgUno{
        background: url('../images/cultura.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

