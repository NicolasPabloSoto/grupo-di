        border-radius: 0 0 12px 12px;
        background-color: rgba(255, 255, 255, 1);
    }

    .check{
        font-size: 0.8em;
        color: var(--color-ayala);
    }

    .logoBox{
        margin: 0;
        padding: 0;
        vertical-align: sub;
        color: var(--color-ayala);

    }

    .infoBoxTitulo{
        width: 100%;
        padding-top: 6px;
        border-bottom: 1px solid var(--color-ayala);
        font-size: 1.2em;
        font-weight: bold;
        letter-spacing: -0.01em;
        text-align: left;
        color: rgb(97, 92, 92);
        vertical-align: sub;
        -background-color: white;
    }

    .infoBoxText{
        width: 94%;
        font-size: 0.8em;
        font-weight: normal;
        line-height: 1.4em;
        letter-spacing: -0.01em;
        text-wrap: pretty;
        color: rgb(105, 101, 101);
        margin-top: 20px;
        margin-bottom: 20px;
    }

    /* contenidos -------------------------------------------------------------------------------------- */

    .contEntrada{
        width: 100%;
        height: fit-content;
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 60px;
        padding-bottom:60px;
        margin-bottom: 20px;

        background: url(../../src/images/business-people-meeting-medium-shot.jpg);
        background-position: center 75%;
        background-size: 200%;
        background-repeat: no-repeat;
        background-blend-mode: soft-light;
        /* background-color: rgba(var(--color-ayala-rgb), 0.95); */
